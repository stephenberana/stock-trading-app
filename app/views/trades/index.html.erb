<div class="flex-container">
    <div class="portfolio-table">
        <div class="flex-container max-1000">
            <h1>Your Portfolio</h1>
            <h3 class="balance">Balance: $.0.00 USD</h3>
        </div>

    <% if Stock.all.size > 0 %>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th class="align-left">Name</th>
                    <th class="align-left">Ticker</th>
                    <th class="align-left">Date</th>
                    <th class="align-left">Quantity</th>
                    <th class="align-right">Purchase Price</th>
                    <th class="align-right">Total Price</th>
                </tr>

            <% @trades.each do |trade| %>
                <tr>
                    <td><%= Stock.find(trade.stock_id).name%>
                    <td><%= Stock.find(trade.stock_id).symbol%>
                    <td><%= trade.purchase_date.strftime("%b, %d, %Y") %></td>
                    <td><%= trade.quantity %> shares</td>
                    <td class="align-right">$<%= "%.2f" % (trade.purchase_price) %></td>
                     <td class="align-right">$<%= "%.2f" % (trade.quantity * trade.purchase_price) %></td>
                </tr>
            <% end %>
        </table>

        <% else %>
            <h4>There are no transactions listed.</h4>
        <% end %>

        <%= link_to "Buy Stocks", new_trade_path %>
    </div>