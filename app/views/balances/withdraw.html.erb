<h4>Withdraw Funds</h4>

<%= form_with(model: @withdraw) do |form| %>
<div class="form-group">
    <% form.label :withdraw, style: 'padding: 24px' %>    
    <%= form.number_field :withdrawals, value: number_to_currency(form.object.withdrawals.to_f, delimiter: '', unit: ''), class: 'form-control mt-3 mb-3', style: 'width: 40%', placeholder: "Withdraw Amount" %>
</div>

<div class="actions">
    <%= form.submit "Submit", class: "btn btn-secondary" %>
</div>

<%end%>